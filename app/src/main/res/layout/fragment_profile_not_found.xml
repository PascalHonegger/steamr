<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProfileNotFoundFragment">

    <ImageView
        android:id="@+id/profileNotFoundIcon"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="@dimen/margin_page"
        android:layout_marginBottom="@dimen/margin_page"
        android:contentDescription="@string/avatar_image"
        android:src="@drawable/ic_baseline_sentiment_very_dissatisfied_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/profileNotFoundTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/profileNotFoundIcon"
        app:layout_constraintStart_toStartOf="@+id/profileNotFoundIcon"
        app:layout_constraintTop_toBottomOf="@+id/profileNotFoundIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>
